- error = @product.errors.include?(:name)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :name,:caption => "Nombre:", :class => 'control-label'
  .controls
    =f.text_field :name,:caption => "Nombre:", :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:name, :class => 'text-error') : pat(:example)
- error = @product.errors.include?(:description)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :description,:caption => "Descripcion:", :class => 'control-label'
  .controls
    =f.text_field :description, :class => 'form-control input-large input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:description, :class => 'text-error') : pat(:example)
- error = @product.errors.include?(:product_picture)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :product_picture,:caption => "Foto del Producto:", :class => 'control-label'
  .controls
    =f.file_field :product_picture, :class => 'form-control input-large input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:product_picture, :class => 'text-error') : pat(:example)
  .image
    %img{ src: @product.product_picture }

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:products, :index), :class => 'btn btn-default'
